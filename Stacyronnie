<body>

    <!-- PAGE 1: THE PROPOSAL -->
    <div id="page1">
        <div class="proposal-container">
            <h1>Stacy ‚ú®</h1>
            <p>Will you be my Valentine?</p>
            <div class="button-group">
                <button id="yesBtn">YES!</button>
                <button id="noBtn">No thanks</button>
            </div>
        </div>
    </div>

    <!-- PAGE 2: DATE PREFERENCES -->
    <div id="page2" class="hidden">
        <div class="preference-container">
            <h2>Let's Plan Our Night üíï</h2>
            <p class="subtitle">A romantic dinner awaits!</p>
            
            <div style="text-align: left; margin-bottom: 40px;">
                <div style="margin-bottom: 35px;">
                    <p style="color: #e0b0ff; font-size: 1.1rem; margin-bottom: 15px; font-weight: 600;">How much would you like for the evening?</p>
                    <input type="number" id="budgetInput" placeholder="Enter amount ($)" style="width: 100%; padding: 14px; background: rgba(138, 43, 226, 0.2); border: 2px solid #8a2be2; border-radius: 15px; color: #e0b0ff; font-family: 'Lora', serif; font-size: 1rem; text-align: center;" min="0">
                </div>

                <div style="margin-bottom: 35px;">
                    <p style="color: #e0b0ff; font-size: 1.1rem; margin-bottom: 15px; font-weight: 600;">Do you want new outfits for our date?</p>
                    <div class="preferences" style="grid-template-columns: 1fr 1fr;">
                        <button class="pref-btn" data-type="outfits" data-value="yes">üëó Yes, let's shop!</button>
                        <button class="pref-btn" data-type="outfits" data-value="no">‚ú® I've got something</button>
                    </div>
                </div>

                <div style="margin-bottom: 35px;">
                    <p style="color: #e0b0ff; font-size: 1.1rem; margin-bottom: 15px; font-weight: 600;">Should we plan a whole weekend?</p>
                    <div class="preferences" style="grid-template-columns: 1fr 1fr;">
                        <button class="pref-btn" data-type="weekend" data-value="yes">üè® Yes! Full weekend!</button>
                        <button class="pref-btn" data-type="weekend" data-value="no">üåô Just the dinner night</button>
                    </div>
                </div>
            </div>

            <div class="submit-container">
                <button id="submitBtn" disabled>Let's Make It Happen üíó</button>
            </div>
        </div>
    </div>

    <script>
        let preferences = {
            budget: null,
            outfits: null,
            weekend: null
        };

        // Flower pop effect
        function createFlowerPop(x, y) {
            const flowers = ['üåπ', 'üå∫', 'üå∏', 'üåº', 'üíê'];
            const flower = document.createElement('div');
            flower.className = 'flower';
            flower.textContent = flowers[Math.floor(Math.random() * flowers.length)];
            
            // Random spread direction
            const angle = Math.random() * Math.PI * 2;
            const distance = 100 + Math.random() * 150;
            const tx = Math.cos(angle) * distance;
            const ty = Math.sin(angle) * distance;
            
            flower.style.left = x + 'px';
            flower.style.top = y + 'px';
            flower.style.setProperty('--tx', tx + 'px');
            flower.style.setProperty('--ty', ty + 'px');
            
            document.body.appendChild(flower);
            
            // Remove element after animation
            setTimeout(() => flower.remove(), 1500);
        }

        // Check if all questions are answered
        function checkAllAnswered() {
            return preferences.budget !== null && preferences.outfits !== null && preferences.weekend !== null;
        }

        // Budget input listener
        document.getElementById('budgetInput').addEventListener('input', function() {
            if (this.value && parseInt(this.value) > 0) {
                preferences.budget = this.value;
            } else {
                preferences.budget = null;
            }
            
            if (checkAllAnswered()) {
                document.getElementById('submitBtn').disabled = false;
            } else {
                document.getElementById('submitBtn').disabled = true;
            }
        });

        // Page 1: Proposal buttons
        document.getElementById('yesBtn').addEventListener('click', function() {
            // Create flower explosions
            for (let i = 0; i < 12; i++) {
                const x = window.innerWidth / 2 + (Math.random() - 0.5) * 200;
                const y = window.innerHeight / 2 + (Math.random() - 0.5) * 200;
                setTimeout(() => createFlowerPop(x, y), i * 50);
            }
            
            // Transition to page 2
            setTimeout(() => {
                document.getElementById('page1').style.display = 'none';
                document.getElementById('page2').style.display = 'flex';
            }, 800);
        });

        document.getElementById('noBtn').addEventListener('click', function() {
            // Just bounce the no button away
            this.style.pointerEvents = 'none';
            setTimeout(() => {
                this.style.pointerEvents = 'auto';
            }, 200);
        });

        // Page 2: Preference selection
        document.querySelectorAll('.pref-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const type = this.getAttribute('data-type');
                const value = this.getAttribute('data-value');
                
                // Remove selected from other buttons of same type
                document.querySelectorAll(`[data-type="${type}"]`).forEach(b => b.classList.remove('selected'));
                
                // Add selected to clicked button
                this.classList.add('selected');
                preferences[type] = value;
                
                // Enable submit button only if all are answered
                if (checkAllAnswered()) {
                    document.getElementById('submitBtn').disabled = false;
                }
                
                // Flower pop on selection
                createFlowerPop(event.clientX, event.clientY);
            });
        });

        // Submit button
        document.getElementById('submitBtn').addEventListener('click', function() {
            // Create celebration flowers
            for (let i = 0; i < 20; i++) {
                const x = Math.random() * window.innerWidth;
                const y = Math.random() * window.innerHeight;
                setTimeout(() => createFlowerPop(x, y), i * 40);
            }
            
            // Show final message
            setTimeout(() => {
                let message = `üéâ Perfect, Stacy! Here's what we're doing:\n\n`;
                message += `üíµ Budget: $${preferences.budget}\n`;
                message += `üëó New Outfits: ${preferences.outfits === 'yes' ? 'Yes! Let\'s go shopping!' : 'You\'ve got it covered!'}\n`;
                message += `üè® Weekend: ${preferences.weekend === 'yes' ? 'Full romantic weekend!' : 'Special dinner night'}\n\n`;
                message += `Can't wait to spend this time with you! üíï‚ú®`;
                alert(message);
            }, 400);
        });

        // Click anywhere to create flowers (bonus feature)
        document.addEventListener('click', function(e) {
            if (e.target.tagName !== 'BUTTON' && e.target.tagName !== 'INPUT') {
                createFlowerPop(e.clientX, e.clientY);
            }
        });
    </script>

</body>
</html>
